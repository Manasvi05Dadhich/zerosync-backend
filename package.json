{
  "name": "zerosync-backend",
  "version": "0.1.0",
  "description": "ZeroSync SDK Backend - Rollup simulation and deployment engine",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "cli": "node packages/cli/bin/zerosync.js",
    "zerosync": "node packages/cli/bin/zerosync.js",
    "simulate": "node packages/cli/bin/zerosync.js simulate",
    "run": "node packages/cli/bin/zerosync.js run",
    "deploy": "node packages/cli/bin/zerosync.js deploy",
    "api": "node packages/api/src/server-v2.js",
    "api:zk": "PROOF_MODE=zk node packages/api/src/server-v2.js",
    "api:mock": "PROOF_MODE=mock node packages/api/src/server-v2.js",
    "dev": "npm run api",
    "setup-circuit": "node packages/sdk-core/scripts/setup-circuit.js",
    "test-zk": "node packages/sdk-core/test-zk-integration.js",
    "test-engine": "node test-rollup-engine.js",
    "test-system": "node test-complete-system.js"
  },
  "keywords": [
    "rollup",
    "zk",
    "ethereum",
    "l2"
  ],
  "author": "Manasvi",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.1",
    "better-sqlite3": "^12.4.1",
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "commander": "^14.0.2",
    "express": "^5.1.0",
    "ffjavascript": "^0.3.0",
    "snarkjs": "^0.7.4"
  },
  "devDependencies": {
    "circom_tester": "^0.0.19"
  }
}
